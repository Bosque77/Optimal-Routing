    "version": "0.2.0",
    "configurations": [
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "lambda-python3.10:HelloWorldFunction (python3.10)",
            "invokeTarget": {
                "target": "template",
                "templatePath": "${workspaceFolder}/lambda/lambda-python3.10/template.yaml",
                "logicalId": "HelloWorldFunction"
            },
            "lambda": {
                "payload": {},
                "environmentVariables": {},
                "runtime": "python3.10"
            }
        },
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "API lambda-python3.10:HelloWorldFunction (python3.10)",
            "invokeTarget": {
                "target": "api",
                "templatePath": "${workspaceFolder}/lambda/lambda-python3.10/template.yaml",
                "logicalId": "HelloWorldFunction"
            },
            "api": {
                "path": "/hello",
                "httpMethod": "get",
                "payload": {
                    "json": {}
                }
            },
            "lambda": {
                "runtime": "python3.10"
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/client"
        }
    ]
}